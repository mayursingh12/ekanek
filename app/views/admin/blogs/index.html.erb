<div class="jumbotron">
  <h1 class="display-4">Blogs</h1>
</div>
<div>
  <%= link_to 'New', new_admin_blog_path, class: 'btn btn-outline-primary float-end', role: "button" %>
</div>
<br>
<table class="table table-hover table-bordered">
  <thead>
  <tr class="table-primary">
    <th scope="col">Title</th>
    <th scope="col">Description</th>
    <th scope="col">Short link</th>
    <th scope="col">Original path</th>
    <th scope="col"></th>
  </tr>
  </thead>
  <tbody>
  <% @blogs.each do |f| %>
    <tr>
      <td><%= f.title %></td>
      <td><%= f.description %></td>
      <td>
        <% if f.shorturl %>
          <%= link_to f.shorturl, f.shorturl, target: '_blank' %>
          <% else %>
          <%= link_to "Generate", generate_admin_blog_path(f), target: '_blank' %>
          <% end %>
      </td>
      <td><%= link_to "Open", "#{request.base_url}#{f.file}", target: '_blank' %></td>
      <td>
        <%= link_to 'Edit', edit_admin_blog_path(f), class: 'btn btn-outline-info' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @blogs%>